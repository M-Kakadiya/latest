<section>
  <div class="customized_product_sec mb-80">
    <div class="page-width">
      {% if section.settings.sub_title != blank %}
        <h5 class="sub-title">{{ section.settings.sub_title }}</h5>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h2 class="common-title">{{ section.settings.heading }}</h2>
      {% endif %}
      <div class="customizes_product_flex_slider">
        {% for block in section.blocks %}
          {% if block.type == 'customized_block' %}
            <div class="customizes_product_flex">
              <div class="customize_product_img_col">
                {% if block.settings.img != blank %}
                  <img src="{{ block.settings.img | img_url:'master' }}">
                {% endif %}
              </div>
              <div class="cutomize_ingri_col">
                <div class="the_blend_text">
                  {% if block.settings.title1 != blank %}
                    <h3>{{ block.settings.title1 }}</h3>
                  {% endif %}
                  <div class="blend_flex">
                    {% for block in section.blocks %}
                      {% if block.type == 'blend_block' %}
                        <div class="blend_inner_flex">
                          <div class="blend_icon">
                            {% if block.settings.icon != blank %}
                              <span>{{ block.settings.icon }}</span>
                            {% endif %}
                          </div>
                          <div class="blend_title">
                            {% if block.settings.title != blank %}
                              <h4>{{ block.settings.title }}</h4>
                            {% endif %}
                          </div>
                        </div>
                      {% endif %}
                    {% endfor %}
                  </div>
                </div>
                <div class="active_ingredients_text">
                  {% if block.settings.title2 != blank %}
                    <h4>{{ block.settings.title2 }}</h4>
                  {% endif %}
                  <div class="active_ingre_flex">
                    {% for block in section.blocks %}
                      {% if block.type == 'ingredients_block' %}
                        <div class="active_ingre_box">
                          {% if block.settings.icon1 != blank %}
                            <span>{{ block.settings.icon1 }}</span>
                          {% endif %}
                          {% if block.settings.heading != blank %}
                            <h6>{{ block.settings.heading }}</h6>
                          {% endif %}
                          {% if block.settings.desc != blank %}
                            <p>{{ block.settings.desc }}</p>
                          {% endif %}
                        </div>
                      {% endif %}
                    {% endfor %}
                  </div>
                  {% if block.settings.btn_text != blank %}
                    <a href="{{ block.settings.btn_url }}">
                      {{ block.settings.btn_text }}
                    </a>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "customized-product-sec",
  "settings": [
     {
      "type": "text",
      "id": "sub_title",
      "label": "Add Sub Title"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Add Heading"
    }
  ],
  "blocks": [
    {
      "type": "customized_block",
      "name":"Customized Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "Add Image"
        },
        {
          "type": "text",
          "id": "title1",
          "label": "Add Title 1"
        },
        {
          "type": "text",
          "id": "title2",
          "label": "Add Title 2"
        },
        {
          "type": "url",
          "id": "btn_url",
          "label": "Add Button Urk"
        },
        {
          "type": "text",
          "id": "btn_text",
          "label": "Add Button Text"
        }
      ]
    },
    {
      "type": "blend_block",
      "name":"Blend Block",
      "settings": [
        {
          "type": "html",
          "id": "icon",
          "label": "Add Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Add Title"
        }
      ]
    },
    {
      "type": "ingredients_block",
      "name":"Ingredients Block",
      "settings": [
        {
          "type": "html",
          "id": "icon1",
          "label": "Add Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Add Title"
        },
       {
         "type": "textarea",
         "id": "desc",
         "label": "Add Content"
       }
      ]
    }
  ],
  "presets": [
    {
      "name":"Customized Product Section"
    }
  ]
}
{% endschema %}
